      gmp.currentTime = 0;
      musicPlayer.src = gmp.list[gmp.currentIndex];
      musicPlayer.play().catch(err => {});
    };
    nextSongBtn.onclick = playNext;
    musicPlayer.onended = playNext;
    document.body.addEventListener('click', () => {
      musicPlayer.play().catch(err => {});
    }, { once: true });
    gmp.isInited = true;
