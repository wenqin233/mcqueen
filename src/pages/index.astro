  ];
  
  if (!window.GlobalMusicPlayer) {
    window.GlobalMusicPlayer = {
      list: musicList,
      currentIndex: 0,
      isPlaying: false,
      currentTime: 0,
      isInited: false
    };
  }
  const gmp = window.GlobalMusicPlayer;
